<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobilproje.ogu.otelrezervasyon.NavigationMenu"
    tools:showIn="@layout/app_bar_navigation_menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Otel Ara"
            android:id="@+id/citySearchName"
            android:inputType="textPersonName" />

        <Button
            android:gravity="bottom"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:id="@+id/btnSearchHotel"
            android:background="@drawable/icon_search"
            android:onClick="SearchHotel"/>

    </LinearLayout>

    <ListView
        android:id="@+id/HotelListe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:id="@+id/RezervasyonListe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
